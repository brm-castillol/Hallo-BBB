.cont-regis-confirmacion
	float left
	text-align center
	width 46%

h3.titulo-registrados
	color $Negro
	font-size 4rem
	margin 10%  0
	text-align center
	
.si-regis
	text-shadow 0px 0px 3px $Verde
	
.no-regis
	text-shadow 0px 0px 3px $Rojo
	
label
	font-size 1.5rem
	color $Negro
	float left

input.datos-login
	background none !important
	border 1px dashed $Negro
	color $Negro
	text-shadow 0px 0px 4px $Naranja
	float right
	height 28px
	margin-bottom 5%
	padding 5px
	width 59%
	
label.face-connect
	margin-top 5%

em.diferen-registro
	color $Negro
	font-size 2rem
	line-height 1.5rem

em.inform-princi
	color $Negro
	font-size 1.6rem
	font-style normal
	line-height 1rem

input.codigo.sync
	background none
	border 1px dashed $Negro
	color $Rojo
	font-family $Edo
	font-size 3.2rem
	height 40px
	margin 20% 0 0 10%
	text-align center
	text-shadow 0px 0px 2px $Negro
	width 80%

.cont-form-registroH
	width 46%
	float left
	
	h2
		color $Naranja
		text-shadow 0px 0px 2px $Negro
		text-align center
		font-family $Edo 
		font-size 4rem
		line-height 3.5rem
		margin-bottom 20px

form.registro-finalH
	margin-top 4%
	
	input, select
		background none
		border 1px dashed $Negro
		color $Negro
		font-family Arial !important
		font-size 1.5rem
		height 20px
		margin 0 0 5%
		width 95%
	
	input.check-terminos
		width 9%
		margin-right 2px
		float left
	
	p
		font-size 1rem
		line-height 1rem
		color $Negro
		float left
		width 80%
	
	input.btn-enviar-regis
		background $Naranja
		border 1px dashed $Negro
		color $Negro
		font-family $Edo !important
		height 30px
		margin 10% auto 0
		width 70%
		
		&:hover
			border 1px inset $Negro
			background-color $Rojo
	
		
		
		
	